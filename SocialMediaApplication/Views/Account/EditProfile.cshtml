@model SocialMediaApplication.Models.User

@using (Html.BeginForm("UpdateProfile", "Account", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div class="form-group">
        <label>Name:</label>
        <input type="text" name="name" class="form-control" required value="@Model.Name" />
    </div>
    <div class="form-group">
        <label>Bio:</label>
        <textarea name="bio" class="form-control" required>@Model.Bio</textarea>
    </div>
    <div class="form-group">
        <label>Profile Picture:</label>
        <img src="@Model.ProfilePictureUrl" alt="Profile Picture" class="img-thumbnail" style="max-width: 150px;" />
        <input type="file" name="profilePicture" class="form-control" />
        <input type="hidden" name="existingProfilePictureUrl" value="@Model.ProfilePictureUrl" />
    </div>
    <button type="submit" class="btn btn-primary">Save Changes</button>
}