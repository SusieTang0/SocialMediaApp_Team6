@using (Html.BeginForm("ResetPassword", "Account", FormMethod.Post))
{
    <div class="d-flex justify-content-center align-items-center" style="min-height: 70vh;">
        <div class="card" style="width: 400px;">
            <div class="card-body">
                @if (ViewBag.ErrorMessage != null)
                {
                    <div class="alert alert-danger">@ViewBag.ErrorMessage</div>
                }

                @if (ViewBag.ResetMessage != null)
                {
                    <div class="alert alert-success">@ViewBag.ResetMessage</div>
                }
                <div class="form-group text-center">
                    <label>Enter your email to reset your password</label>

                    <input type="email" name="resetEmail" class="form-control" placeholder="Enter your email" required />
                </div>
                <br />
                <div class="form-group text-center">
                    <button type="submit" class="btn btn-secondary">Reset Password</button>
                </div>
            </div>
        </div>
    </div>
}
