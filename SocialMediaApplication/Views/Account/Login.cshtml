@using (Html.BeginForm("Login", "Account", FormMethod.Post))
{
    <div class="d-flex justify-content-center align-items-center" style="min-height: 70vh;">
        <div class="card" style="width: 400px;">
            <div class="card-body">
                <h3 class="card-title text-center">Welcome back to Cross</h3>
                <p class="text-center text-muted">Please log in to continue</p>

                @if (ViewBag.ErrorMessage != null)
                {
                    <div class="alert alert-danger">@ViewBag.ErrorMessage</div>
                }

                @if (ViewBag.ResetMessage != null)
                {
                    <div class="alert alert-success">@ViewBag.ResetMessage</div>
                }

                @if (ViewBag.ResetErrorMessage != null)
                {
                    <div class="alert alert-danger">@ViewBag.ResetErrorMessage</div>
                }

                <div class="form-group">
                    <label>Email:</label>
                    <input type="email" name="email" class="form-control" required value="@ViewBag.Email" />
                </div>
                <br />

                <div class="form-group">
                    <label>Password:</label>
                    <input type="password" name="password" class="form-control" required />
                </div>

                <div class="form-group">
                    <a href="@Url.Action("ResetPassword", "Account")">Forgot Password?</a>
                </div>
                <br />
                <div class="form-group text-center">
                    <button type="submit" class="btn btn-primary btn-block">Login</button>
                </div>

                <div class="form-group text-center">
                    <p>Don't have an account? <a href="@Url.Action("Register", "Account")">Create an account</a></p>
                </div>
            </div>
        </div>
    </div>
}
